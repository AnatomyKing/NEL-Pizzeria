<UserControl x:Class="NELpizza.View.BakkerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:NELpizza.ViewModels.Views"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:BakkerViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Bestellingen (Besteld)" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Orders List -->
        <ListView ItemsSource="{Binding Bestellingen}" Grid.Row="1" Name="OrdersListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="Klant" DisplayMemberBinding="{Binding Klant.Naam}" Width="150"/>
                    <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Datum, StringFormat=dd-MM-yyyy HH:mm}" Width="150"/>
                    <GridViewColumn Header="Aantal Pizza's" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Bestelregels.Count}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Refresh Button -->
        <Button Content="Ververs" 
                Command="{Binding RefreshOrdersCommand}" 
                Grid.Row="2" 
                HorizontalAlignment="Right" 
                Width="100" 
                Margin="0,20,0,0"/>
    </Grid>
</UserControl>